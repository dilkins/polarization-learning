@SET aa BOXL1
@SET bb BOXL2
@SET cc BOXL3
@SET alpha ANGLE1
@SET beta  ANGLE2
@SET gamma ANGLE3
&FORCE_EVAL
   &DFT
      BASIS_SET_FILE_NAME GTH_BASIS_SETS
      &MGRID
         CUTOFF 400
      &END MGRID
      POTENTIAL_FILE_NAME POTENTIAL
      &QS
         EPS_DEFAULT 1e-12
         EPS_PGF_ORB 1e-14
         EXTRAPOLATION USE_GUESS
         EXTRAPOLATION_ORDER 5
      &END QS
      &SCF
         EPS_SCF 5e-07
         MAX_SCF 50
         &OT
            MINIMIZER DIIS
            PRECONDITIONER FULL_ALL
         &END OT
         &OUTER_SCF
            EPS_SCF 5e-07
            MAX_SCF 20
         &END OUTER_SCF
         SCF_GUESS RESTART
      &END SCF
      &XC
         &VDW_POTENTIAL
            &PAIR_POTENTIAL
               LONG_RANGE_CORRECTION TRUE
               PARAMETER_FILE_NAME dftd3.dat
               REFERENCE_FUNCTIONAL revPBE
               R_CUTOFF 15
               TYPE DFTD3
            &END PAIR_POTENTIAL
            POTENTIAL_TYPE PAIR_POTENTIAL
         &END VDW_POTENTIAL
         &XC_FUNCTIONAL
            &PBE
               PARAMETRIZATION REVPBE
            &END PBE
         &END XC_FUNCTIONAL
         &XC_GRID
            XC_DERIV NN10_SMOOTH
         &END XC_GRID
      &END XC
    &LOCALIZE
     &PRINT
      &TOTAL_DIPOLE
      &END
      &WANNIER_CENTERS
       IONS+CENTERS .TRUE.
      &END
     &END PRINT
    &END LOCALIZE
    &PRINT
     &MOMENTS
     &END
    &END PRINT
   &END DFT
   METHOD Quickstep
   &PRINT
      &FORCES ON
      &END FORCES
   &END PRINT
   &SUBSYS
      &CELL
         ABC ${aa} ${bb} ${cc}
         ALPHA_BETA_GAMMA ${alpha} ${beta} ${gamma}
      &END CELL
      &KIND O
         BASIS_SET TZV2P-GTH
         POTENTIAL GTH-PBE-q6
      &END KIND
      &KIND H
         BASIS_SET TZV2P-GTH
         POTENTIAL GTH-PBE-q1
      &END KIND
      &TOPOLOGY
         COORD_FILE_FORMAT XYZ
         COORD_FILE_NAME frame.xyz
      &END TOPOLOGY
   &END SUBSYS
&END FORCE_EVAL
&GLOBAL
   PROJECT wannier
   RUN_TYPE ENERGY_FORCE
&END GLOBAL
